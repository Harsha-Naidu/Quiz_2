<%= form_with model:@idea, local: true do |f| %>

<% if @idea.errors.present? %>
<%= @idea.errors.full_messages.join(', ')%>
<% end %>

  <div class="form-group">
    <strong><%= f.label :title %></strong>
    <br>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label :description %></strong>
    <br>
    <%= f.text_area :description, cols:30 ,rows:2,class:"form-control" %>
  </div>

  <%= f.submit class:"btn btn-outline-primary" %>
  
<% end %>